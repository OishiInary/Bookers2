<div class="container my-box">
  <div class="row col-1 justify-content-center"></div>
   <div class="col">
    <h1>Editing Book</h1>

     <%= form_with model: @book do |f| %>

      <h4>Title</h4>
      <%= f.text_field :title %>
  
      <h4>Opinion</h4>
      <%= f.text_area :body %>
  
      <%= f.submit 'Update Book' %>
  
    <% end %>
  <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %>
  </div>
 </div>
</div>