<div class="container px-5">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
    <ul>
     <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
     <% end %>
    </ul>
  <% end %>
 <div class="row">
  <div class="col-md-3">
   <h2>User info</h2>
   <div><%= image_tag current_user.get_profile_image(100,100) %></div>
    <table class="table table-hover">
     <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
     </tr>
    </table>
   <div class="row">
    <div class="col">
     <%= link_to edit_user_registration_path, class: "btn btn-outline-secondary btn-block", method: :get do %>
      <%= button_tag type: "edit", class: "btn btn-default" do %>
       <i class="fa-solid fa-user-gear"></i>
      <% end %>
     <% end %>
    </div>
   </div>
  
   <div class="row">
    <h2>New Book</h2>
    <%= form_with model: @book do |f|  %>
     <h4>Title</h4>
     <%= f.text_field :title %>
     <h4>Opinion</h4>
     <%= f.text_area :body %>
     <%= f.submit 'Create Book',class:"btn btn-success" %>
    <% end %>
   </div>
  </div>

  <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
   <table class="table table-hover">
   <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
   </tr>
   <% @books.each do |book| %>
    <tr>
     <td><%= link_to user_path(book.user.id) do %><%= image_tag book.user.get_profile_image(80,80) %><% end %></td>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
   </tr>
   <% end %>
   </table>
  </div>
 </div>
</div>