<div class="container px-5">
 <div class="row">
  <div class="col-md-3">
   <h2>User info</h2>
   <div><%= image_tag @book.user.get_profile_image(100,100) %></div>
    <table class="table">
     <tr>
      <th>name</th>
      <th><%= @book.user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= @book.user.introduction %></th>
     </tr>
    </table>
   <div class="row">
    <div class="col">
     <%= link_to edit_user_registration_path, class: "btn btn-outline-secondary btn-block", method: :get do %>
      <%= button_tag type: "edit", class: "btn btn-default" do %>
       <i class="fa-solid fa-user-gear"></i>
      <% end %>
     <% end %>
    </div>
   </div>
   <div class="row">
    <h2>New Book</h2>
    <%= form_with model: @book do |f| %>
     <h4>Title</h4>
     <%= f.text_field :title %>
     <h4>Opinion</h4>
     <%= f.text_area :body %>
     <%= f.submit 'Create Book', class:"btn btn-success"%>
    <% end %>
   </div>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table table-hover">
    <tr>
     <td><%= link_to user_path(@book.user.id) do %>
      <%= image_tag @book.user.get_profile_image(80,80) %><br>
      <%= @book.user.name %><% end %></td>
     <td><%= @book.title %></td>
     <td><%= @book.body %></td>
     <td>
      <% if @book.user == current_user %>
       <%= link_to "Edit", edit_book_path(@book),class: "btn btn-warning"%>
      <% end %>
     </td>
     <td>
      <% if @book.user == current_user %>
       <%= link_to "Destroy", book_path(@book),class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
      <% end %>
     </td>
    </tr>
   </table>
  </div>
 </div>
</div>


