<h2>User info</h2>
<div>
 <% flash.each do |message_type, message| %>
   <div class="flash-message <%= message_type %>"><%= message %></div>
 <% end %>
</div>
<% if @user.errors.any? %>
  <div class="alert alert-danger">
   <%= @user.errors.count %>errors prohibited this obj from being saved:
   <ul>
    <% @user.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
  </div>
 <% end %>

<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", autocomplete: "name"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  <label for="user_introduction">Introduction</label>
  <%= f.text_area :introduction,id:"user_introduction"%>
  <%= f.submit "Update User" %>
<% end %>